generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  WAREHOUSE
  FIELD
  SALES_REP
  DRIVER
  CUSTOMER_USER
}

enum BusinessModel {
  WAREHOUSE_ONLY
  DISTRIBUTION
  HYBRID
}

enum OrderStatus {
  SUBMITTED
  IN_PROGRESS
  READY
  COMPLETED
  CANCELLED
}

enum OrderType {
  WEEKLY_STOCK
  AD_HOC
  TRANSFER
}

enum CustomerStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum CustomerOrderStatus {
  SUBMITTED
  APPROVED
  PULLED
  LOADED
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
}

enum CustomerOrderType {
  STANDARD
  EMERGENCY
  STANDING
}

enum DeliveryStatus {
  SCHEDULED
  LOADED
  IN_TRANSIT
  ARRIVED
  DELIVERED
  FAILED
}

enum LicenseStatus {
  TRIAL
  ACTIVE
  SUSPENDED
  EXPIRED
}

enum LicenseTier {
  BASE
  ELITE
  DISTRIBUTION
}

enum AiConversationStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}

enum AiMessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum AiActionStatus {
  PROPOSED
  CONFIRMED
  EXECUTED
  FAILED
  CANCELLED
}

enum POStatus {
  DRAFT
  SUBMITTED
  CONFIRMED
  PARTIAL_RECEIVED
  RECEIVED
  CANCELLED
}

enum JobStatus {
  ACTIVE
  ON_HOLD
  COMPLETED
  CANCELLED
}

enum AllocationType {
  JOB
  STOCK
}

model Company {
  id            String        @id @default(cuid())
  name          String
  slug          String        @unique
  logoUrl       String?
  primaryColor  String?
  appName       String?
  businessModel BusinessModel @default(WAREHOUSE_ONLY)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  license               License?
  users                 User[]
  branches              Branch[]
  warehouseInventory    WarehouseInventory[]
  vehicleInventoryItems VehicleInventoryItem[]
  vehicleStocks         VehicleStock[]
  orders                Order[]
  inventoryTransactions InventoryTransaction[]
  partRequests          PartRequest[]
  bomDrafts             BomDraft[]
  aiConversations       AiConversation[]
  aiActions             AiAction[]
  auditLogs             AuditLog[]
  distributors          Distributor[]
  supplierMappings      SupplierItemMapping[]
  inventoryThresholds   InventoryThreshold[]
  jobs                  Job[]
  purchaseOrders        PurchaseOrder[]
  poReceivingLogs       POReceivingLog[]
  customers             Customer[]
  routes                Route[]
  customerOrders        CustomerOrder[]
  deliveryOrders        DeliveryOrder[]

  @@map("companies")
}

model License {
  id                   String        @id @default(cuid())
  companyId            String        @unique
  status               LicenseStatus @default(TRIAL)
  tier                 LicenseTier   @default(BASE)
  startsAt             DateTime      @default(now())
  expiresAt            DateTime?
  stripeCustomerId     String?       @unique
  stripeSubscriptionId String?       @unique
  stripePriceId        String?
  includedBranches     Int           @default(1)
  includedUsers        Int           @default(10)
  additionalBranches   Int           @default(0)
  additionalUsers      Int           @default(0)
  notes                String?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("licenses")
}

model Branch {
  id        String   @id @default(cuid())
  companyId String
  name      String
  city      String
  address   String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company             Company              @relation(fields: [companyId], references: [id], onDelete: Cascade)
  users               User[]
  warehouseInventory  WarehouseInventory[]
  vehicleStocks       VehicleStock[]
  orders              Order[]
  aiConversations     AiConversation[]
  inventoryThresholds InventoryThreshold[]
  purchaseOrders      PurchaseOrder[]

  @@unique([companyId, name])
  @@map("branches")
}

model User {
  id            String   @id @default(cuid())
  companyId     String
  email         String   @unique
  name          String
  password      String
  role          UserRole
  vehicleNumber String?
  branchId      String?
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // For sales reps
  territory      String?
  commissionRate Float?

  // For drivers
  licenseNumber String?

  // For customer users
  customerId String?

  company         Company          @relation(fields: [companyId], references: [id], onDelete: Cascade)
  branch          Branch?          @relation(fields: [branchId], references: [id])
  orders          Order[]
  vehicleStocks   VehicleStock[]
  partRequests    PartRequest[]
  bomDrafts       BomDraft[]
  aiConversations AiConversation[]
  aiActions       AiAction[]
  auditLogs       AuditLog[]
  createdJobs     Job[]
  createdPOs      PurchaseOrder[]  @relation("POCreator")
  submittedPOs    PurchaseOrder[]  @relation("POSubmitter")
  receivingLogs   POReceivingLog[]

  // Distribution relationships
  customersManaged      Customer[]      @relation("SalesRepCustomers")
  salesOrders           CustomerOrder[] @relation("SalesRepOrders")
  createdCustomerOrders CustomerOrder[] @relation("CreatedCustomerOrders")
  routes                Route[]         @relation("DriverRoutes")
  deliveries            DeliveryOrder[] @relation("DriverDeliveries")
  customer              Customer?       @relation("CustomerUsers", fields: [customerId], references: [id])

  @@unique([companyId, vehicleNumber])
  @@map("users")
}

model WarehouseInventory {
  id            String   @id @default(cuid())
  companyId     String
  itemName      String
  category      String
  parLevel      Int
  currentQty    Int
  unit          String
  branchId      String?
  sku           String?
  qrCodeData    String?  @db.Text
  lastUpdated   DateTime @default(now())
  updatedAt     DateTime @updatedAt
  minLevel      Int?
  criticalLevel Int?
  reorderQty    Int?

  company               Company                @relation(fields: [companyId], references: [id], onDelete: Cascade)
  branch                Branch?                @relation(fields: [branchId], references: [id])
  orderItems            OrderItem[]
  inventoryTransactions InventoryTransaction[]
  bomItems              BomItem[]
  supplierMappings      SupplierItemMapping[]
  thresholds            InventoryThreshold[]
  purchaseOrderItems    PurchaseOrderItem[]
  customerParLevels     CustomerParLevel[]
  customerInventory     CustomerInventory[]
  customerOrderItems    CustomerOrderItem[]

  @@unique([companyId, itemName, branchId])
  @@unique([companyId, sku, branchId])
  @@map("warehouse_inventory")
}

model VehicleInventoryItem {
  id        String @id @default(cuid())
  companyId String
  itemName  String
  category  String
  parLevel  Int
  unit      String

  company           Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  vehicleStockItems VehicleStockItem[]

  @@unique([companyId, itemName])
  @@map("vehicle_inventory_items")
}

model VehicleStock {
  id            String   @id @default(cuid())
  companyId     String
  userId        String
  vehicleNumber String
  branchId      String?
  weekEnding    DateTime
  submittedAt   DateTime @default(now())

  company        Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user           User               @relation(fields: [userId], references: [id])
  branch         Branch?            @relation(fields: [branchId], references: [id])
  items          VehicleStockItem[]
  generatedOrder Order?

  @@map("vehicle_stocks")
}

model VehicleStockItem {
  id             String @id @default(cuid())
  vehicleStockId String
  itemId         String
  expectedQty    Int
  actualQty      Int
  difference     Int

  vehicleStock VehicleStock         @relation(fields: [vehicleStockId], references: [id], onDelete: Cascade)
  item         VehicleInventoryItem @relation(fields: [itemId], references: [id])

  @@map("vehicle_stock_items")
}

model Order {
  id             String      @id @default(cuid())
  companyId      String
  orderNumber    String
  userId         String
  vehicleNumber  String
  branchId       String?
  orderType      OrderType
  status         OrderStatus @default(SUBMITTED)
  notes          String?
  vehicleStockId String?     @unique
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  completedAt    DateTime?

  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id])
  branch       Branch?       @relation(fields: [branchId], references: [id])
  vehicleStock VehicleStock? @relation(fields: [vehicleStockId], references: [id])
  items        OrderItem[]
  bomDraft     BomDraft?

  @@unique([companyId, orderNumber])
  @@map("orders")
}

model OrderItem {
  id              String @id @default(cuid())
  orderId         String
  warehouseItemId String
  requestedQty    Int
  pulledQty       Int    @default(0)

  order         Order              @relation(fields: [orderId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory @relation(fields: [warehouseItemId], references: [id])

  @@map("order_items")
}

model InventoryTransaction {
  id        String   @id @default(cuid())
  companyId String
  itemId    String
  delta     Int
  reason    String?
  source    String   @default("manual")
  createdBy String?
  createdAt DateTime @default(now())

  company Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  item    WarehouseInventory @relation(fields: [itemId], references: [id])

  @@map("inventory_transactions")
}

enum PartRequestStatus {
  PENDING
  IN_PROGRESS
  FULFILLED
  CANCELLED
}

enum BomStatus {
  DRAFT
  PROCESSING
  PROCESSED
  SUBMITTED
  FAILED
}

enum MatchConfidence {
  HIGH
  MEDIUM
  LOW
  MANUAL
}

model PartRequest {
  id          String            @id @default(cuid())
  companyId   String
  requestedBy String
  itemName    String
  description String?
  quantity    Int               @default(1)
  urgency     String            @default("normal") // low, normal, high, critical
  status      PartRequestStatus @default(PENDING)
  notes       String?
  fulfilledBy String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  fulfilledAt DateTime?

  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  requester User    @relation(fields: [requestedBy], references: [id])

  @@map("part_requests")
}

model BomDraft {
  id                String    @id @default(cuid())
  companyId         String
  userId            String
  name              String
  description       String?
  pdfFileName       String
  pdfFilePath       String
  pdfFileSize       Int
  status            BomStatus @default(DRAFT)
  aiProcessingError String?   @db.Text
  orderId           String?   @unique
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  submittedAt       DateTime?

  company Company   @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User      @relation(fields: [userId], references: [id])
  order   Order?    @relation(fields: [orderId], references: [id])
  items   BomItem[]

  @@map("bom_drafts")
}

model BomItem {
  id                   String          @id @default(cuid())
  bomDraftId           String
  extractedItemName    String
  extractedQuantity    Int
  extractedUnit        String?
  extractedCategory    String?
  extractedWireSize    String? // Wire size (e.g., "10 AWG", "12 AWG")
  extractedConduitSize String? // Conduit size (e.g., "1/2\"", "3/4\"")
  warehouseItemId      String?
  matchConfidence      MatchConfidence @default(LOW)
  aiMatchReason        String?         @db.Text
  manuallyOverridden   Boolean         @default(false)
  notes                String?         @db.Text
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt

  bomDraft      BomDraft            @relation(fields: [bomDraftId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory? @relation(fields: [warehouseItemId], references: [id])

  @@map("bom_items")
}

model AiConversation {
  id            String               @id @default(cuid())
  companyId     String
  userId        String
  branchId      String?
  topic         String
  status        AiConversationStatus @default(ACTIVE)
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  lastMessageAt DateTime             @default(now())
  archivedAt    DateTime?

  company  Company     @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user     User        @relation(fields: [userId], references: [id])
  branch   Branch?     @relation(fields: [branchId], references: [id])
  messages AiMessage[]
  actions  AiAction[]

  @@index([companyId, userId])
  @@index([status, lastMessageAt])
  @@map("ai_conversations")
}

model AiMessage {
  id               String        @id @default(cuid())
  conversationId   String
  role             AiMessageRole
  content          String        @db.Text
  toolCalls        String?       @db.Text
  audioTranscript  Boolean       @default(false)
  tokenCount       Int?
  processingTimeMs Int?
  createdAt        DateTime      @default(now())

  conversation AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@map("ai_messages")
}

model AiAction {
  id             String         @id @default(cuid())
  conversationId String
  companyId      String
  userId         String
  actionType     String
  status         AiActionStatus @default(PROPOSED)
  proposedData   String         @db.Text
  executedData   String?        @db.Text
  errorMessage   String?        @db.Text
  idempotencyKey String         @unique
  entityType     String?
  entityId       String?
  createdAt      DateTime       @default(now())
  confirmedAt    DateTime?
  executedAt     DateTime?

  conversation AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  company      Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user         User           @relation(fields: [userId], references: [id])

  @@index([companyId, userId])
  @@index([status, createdAt])
  @@index([idempotencyKey])
  @@map("ai_actions")
}

model AuditLog {
  id         String   @id @default(cuid())
  companyId  String
  userId     String?
  entityType String
  entityId   String
  action     String
  changes    String   @db.Text
  reason     String?
  source     String   @default("ui")
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id])

  @@index([companyId, entityType, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}

model Distributor {
  id              String   @id @default(cuid())
  companyId       String
  name            String
  contactName     String?
  email           String?
  phone           String?
  website         String?
  orderingMethod  String?
  defaultLeadDays Int      @default(0)
  notes           String?  @db.Text
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  company        Company               @relation(fields: [companyId], references: [id], onDelete: Cascade)
  itemMappings   SupplierItemMapping[]
  purchaseOrders PurchaseOrder[]

  @@unique([companyId, name])
  @@map("distributors")
}

model SupplierItemMapping {
  id                String   @id @default(cuid())
  companyId         String
  warehouseItemId   String
  distributorId     String
  supplierSKU       String?
  packSize          Int      @default(1)
  unitCost          Decimal  @db.Decimal(10, 2)
  moq               Int      @default(1)
  preferredSupplier Boolean  @default(false)
  leadTimeDays      Int?
  notes             String?  @db.Text
  active            Boolean  @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  company       Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory @relation(fields: [warehouseItemId], references: [id], onDelete: Cascade)
  distributor   Distributor        @relation(fields: [distributorId], references: [id], onDelete: Cascade)

  @@unique([companyId, warehouseItemId, distributorId])
  @@map("supplier_item_mappings")
}

model InventoryThreshold {
  id              String   @id @default(cuid())
  companyId       String
  warehouseItemId String
  branchId        String?
  minLevel        Int      @default(0)
  parLevel        Int
  criticalLevel   Int      @default(0)
  reorderQty      Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  company       Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory @relation(fields: [warehouseItemId], references: [id], onDelete: Cascade)
  branch        Branch?            @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([companyId, warehouseItemId, branchId])
  @@map("inventory_thresholds")
}

model Job {
  id              String    @id @default(cuid())
  companyId       String
  jobNumber       String
  customerName    String
  customerContact String?
  projectName     String?
  address         String?
  status          JobStatus @default(ACTIVE)
  estimatedValue  Decimal?  @db.Decimal(12, 2)
  startDate       DateTime?
  targetEndDate   DateTime?
  actualEndDate   DateTime?
  notes           String?   @db.Text
  createdBy       String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?

  company            Company             @relation(fields: [companyId], references: [id], onDelete: Cascade)
  creator            User                @relation(fields: [createdBy], references: [id])
  purchaseOrderItems PurchaseOrderItem[]

  @@unique([companyId, jobNumber])
  @@index([companyId, status])
  @@map("jobs")
}

model PurchaseOrder {
  id               String    @id @default(cuid())
  companyId        String
  poNumber         String
  distributorId    String
  branchId         String?
  status           POStatus  @default(DRAFT)
  orderDate        DateTime?
  expectedDelivery DateTime?
  actualDelivery   DateTime?
  totalCost        Decimal   @default(0) @db.Decimal(12, 2)
  notes            String?   @db.Text
  createdBy        String
  submittedBy      String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  submittedAt      DateTime?
  receivedAt       DateTime?

  company       Company             @relation(fields: [companyId], references: [id], onDelete: Cascade)
  distributor   Distributor         @relation(fields: [distributorId], references: [id])
  branch        Branch?             @relation(fields: [branchId], references: [id])
  creator       User                @relation("POCreator", fields: [createdBy], references: [id])
  submitter     User?               @relation("POSubmitter", fields: [submittedBy], references: [id])
  items         PurchaseOrderItem[]
  receivingLogs POReceivingLog[]

  @@unique([companyId, poNumber])
  @@index([companyId, status])
  @@index([companyId, distributorId])
  @@map("purchase_orders")
}

model PurchaseOrderItem {
  id              String         @id @default(cuid())
  poId            String
  warehouseItemId String
  supplierSKU     String?
  orderedQty      Int
  receivedQty     Int            @default(0)
  packSize        Int            @default(1)
  unitCost        Decimal        @db.Decimal(10, 2)
  lineTotalCost   Decimal        @db.Decimal(12, 2)
  allocationType  AllocationType
  jobId           String?
  notes           String?        @db.Text
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  purchaseOrder PurchaseOrder      @relation(fields: [poId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory @relation(fields: [warehouseItemId], references: [id])
  job           Job?               @relation(fields: [jobId], references: [id])
  receivingLogs POReceivingLog[]

  @@index([poId])
  @@index([jobId])
  @@map("purchase_order_items")
}

model POReceivingLog {
  id                String   @id @default(cuid())
  companyId         String
  poId              String
  poItemId          String
  receivedQty       Int
  receivedBy        String
  receivedAt        DateTime @default(now())
  notes             String?  @db.Text
  discrepancy       Boolean  @default(false)
  discrepancyReason String?  @db.Text

  company           Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  purchaseOrder     PurchaseOrder     @relation(fields: [poId], references: [id], onDelete: Cascade)
  purchaseOrderItem PurchaseOrderItem @relation(fields: [poItemId], references: [id], onDelete: Cascade)
  receiver          User              @relation(fields: [receivedBy], references: [id])

  @@index([companyId, poId])
  @@map("po_receiving_logs")
}

// ===================================
// DISTRIBUTION MODELS
// ===================================

model Customer {
  id                   String         @id @default(cuid())
  companyId            String
  businessName         String
  contactName          String?
  phone                String?
  email                String?
  address              String
  city                 String?
  state                String?
  zipCode              String?
  deliveryInstructions String?
  accountNumber        String?
  routeId              String?
  salesRepId           String?
  status               CustomerStatus @default(ACTIVE)
  creditLimit          Float?
  paymentTerms         String?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  company   Company             @relation(fields: [companyId], references: [id], onDelete: Cascade)
  route     Route?              @relation(fields: [routeId], references: [id])
  salesRep  User?               @relation("SalesRepCustomers", fields: [salesRepId], references: [id])
  parLevels CustomerParLevel[]
  inventory CustomerInventory[]
  orders    CustomerOrder[]
  users     User[]              @relation("CustomerUsers")

  @@unique([companyId, accountNumber])
  @@index([companyId, salesRepId])
  @@index([companyId, routeId])
  @@map("customers")
}

model CustomerParLevel {
  id              String @id @default(cuid())
  customerId      String
  warehouseItemId String
  parLevel        Int

  customer      Customer           @relation(fields: [customerId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory @relation(fields: [warehouseItemId], references: [id])

  @@unique([customerId, warehouseItemId])
  @@map("customer_par_levels")
}

model CustomerInventory {
  id               String    @id @default(cuid())
  customerId       String
  warehouseItemId  String
  currentQty       Int
  lastCountDate    DateTime?
  lastCountBy      String?
  lastDeliveryDate DateTime?

  customer      Customer           @relation(fields: [customerId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory @relation(fields: [warehouseItemId], references: [id])

  @@unique([customerId, warehouseItemId])
  @@map("customer_inventory")
}

model Route {
  id          String   @id @default(cuid())
  companyId   String
  name        String
  description String?
  driverId    String?
  schedule    String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  company        Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  driver         User?           @relation("DriverRoutes", fields: [driverId], references: [id])
  customers      Customer[]
  deliveryOrders DeliveryOrder[]

  @@unique([companyId, name])
  @@map("routes")
}

model CustomerOrder {
  id              String              @id @default(cuid())
  companyId       String
  orderNumber     String              @unique
  customerId      String
  createdById     String
  salesRepId      String?
  deliveryOrderId String?             @unique
  status          CustomerOrderStatus @default(SUBMITTED)
  orderType       CustomerOrderType   @default(STANDARD)
  subtotal        Float               @default(0)
  tax             Float               @default(0)
  total           Float               @default(0)
  notes           String?
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  company       Company             @relation(fields: [companyId], references: [id], onDelete: Cascade)
  customer      Customer            @relation(fields: [customerId], references: [id])
  createdBy     User                @relation("CreatedCustomerOrders", fields: [createdById], references: [id])
  salesRep      User?               @relation("SalesRepOrders", fields: [salesRepId], references: [id])
  items         CustomerOrderItem[]
  deliveryOrder DeliveryOrder?

  @@index([companyId, customerId])
  @@index([companyId, salesRepId])
  @@index([companyId, status])
  @@map("customer_orders")
}

model CustomerOrderItem {
  id              String  @id @default(cuid())
  customerOrderId String
  warehouseItemId String
  requestedQty    Int
  pulledQty       Int     @default(0)
  deliveredQty    Int     @default(0)
  returnedQty     Int     @default(0)
  unitPrice       Float?
  lineTotal       Float?
  notes           String?

  customerOrder CustomerOrder      @relation(fields: [customerOrderId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory @relation(fields: [warehouseItemId], references: [id])

  @@map("customer_order_items")
}

model DeliveryOrder {
  id              String         @id @default(cuid())
  companyId       String
  deliveryNumber  String         @unique
  routeId         String
  driverId        String
  customerOrderId String         @unique
  scheduledDate   DateTime
  loadedAt        DateTime?
  departedAt      DateTime?
  arrivedAt       DateTime?
  deliveredAt     DateTime?
  status          DeliveryStatus @default(SCHEDULED)
  driverNotes     String?
  signature       String?        @db.Text
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  company       Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  route         Route         @relation(fields: [routeId], references: [id])
  driver        User          @relation("DriverDeliveries", fields: [driverId], references: [id])
  customerOrder CustomerOrder @relation(fields: [customerOrderId], references: [id])

  @@index([companyId, routeId])
  @@index([companyId, driverId])
  @@index([companyId, status])
  @@map("delivery_orders")
}
