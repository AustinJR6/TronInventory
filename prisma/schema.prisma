generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  WAREHOUSE
  FIELD
}

enum OrderStatus {
  SUBMITTED
  IN_PROGRESS
  READY
  COMPLETED
  CANCELLED
}

enum OrderType {
  WEEKLY_STOCK
  AD_HOC
  TRANSFER
}

enum LicenseStatus {
  TRIAL
  ACTIVE
  SUSPENDED
  EXPIRED
}

enum LicenseTier {
  CORE
  OPS
  OPS_SCAN
  OPS_SCAN_PO
}

model Company {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  logoUrl      String?
  primaryColor String?
  appName      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  license               License?
  users                 User[]
  branches              Branch[]
  warehouseInventory    WarehouseInventory[]
  vehicleInventoryItems VehicleInventoryItem[]
  vehicleStocks         VehicleStock[]
  orders                Order[]
  inventoryTransactions InventoryTransaction[]
  partRequests          PartRequest[]

  @@map("companies")
}

model License {
  id        String        @id @default(cuid())
  companyId String        @unique
  status    LicenseStatus @default(TRIAL)
  tier      LicenseTier   @default(CORE)
  startsAt  DateTime      @default(now())
  expiresAt DateTime?
  notes     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("licenses")
}

model Branch {
  id        String   @id @default(cuid())
  companyId String
  name      String
  city      String
  address   String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company            Company              @relation(fields: [companyId], references: [id], onDelete: Cascade)
  users              User[]
  warehouseInventory WarehouseInventory[]
  vehicleStocks      VehicleStock[]
  orders             Order[]

  @@unique([companyId, name])
  @@map("branches")
}

model User {
  id            String   @id @default(cuid())
  companyId     String
  email         String   @unique
  name          String
  password      String
  role          UserRole
  vehicleNumber String?
  branchId      String?
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  company       Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  branch        Branch?        @relation(fields: [branchId], references: [id])
  orders        Order[]
  vehicleStocks VehicleStock[]
  partRequests  PartRequest[]

  @@unique([companyId, vehicleNumber])
  @@map("users")
}

model WarehouseInventory {
  id          String   @id @default(cuid())
  companyId   String
  itemName    String
  category    String
  parLevel    Int
  currentQty  Int
  unit        String
  branchId    String?
  lastUpdated DateTime @default(now())
  updatedAt   DateTime @updatedAt

  company               Company                @relation(fields: [companyId], references: [id], onDelete: Cascade)
  branch                Branch?                @relation(fields: [branchId], references: [id])
  orderItems            OrderItem[]
  inventoryTransactions InventoryTransaction[]

  @@unique([companyId, itemName, branchId])
  @@map("warehouse_inventory")
}

model VehicleInventoryItem {
  id        String @id @default(cuid())
  companyId String
  itemName  String
  category  String
  parLevel  Int
  unit      String

  company           Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  vehicleStockItems VehicleStockItem[]

  @@unique([companyId, itemName])
  @@map("vehicle_inventory_items")
}

model VehicleStock {
  id            String   @id @default(cuid())
  companyId     String
  userId        String
  vehicleNumber String
  branchId      String?
  weekEnding    DateTime
  submittedAt   DateTime @default(now())

  company        Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user           User               @relation(fields: [userId], references: [id])
  branch         Branch?            @relation(fields: [branchId], references: [id])
  items          VehicleStockItem[]
  generatedOrder Order?

  @@map("vehicle_stocks")
}

model VehicleStockItem {
  id             String @id @default(cuid())
  vehicleStockId String
  itemId         String
  expectedQty    Int
  actualQty      Int
  difference     Int

  vehicleStock VehicleStock         @relation(fields: [vehicleStockId], references: [id], onDelete: Cascade)
  item         VehicleInventoryItem @relation(fields: [itemId], references: [id])

  @@map("vehicle_stock_items")
}

model Order {
  id             String      @id @default(cuid())
  companyId      String
  orderNumber    String
  userId         String
  vehicleNumber  String
  branchId       String?
  orderType      OrderType
  status         OrderStatus @default(SUBMITTED)
  notes          String?
  vehicleStockId String?     @unique
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  completedAt    DateTime?

  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id])
  branch       Branch?       @relation(fields: [branchId], references: [id])
  vehicleStock VehicleStock? @relation(fields: [vehicleStockId], references: [id])
  items        OrderItem[]

  @@unique([companyId, orderNumber])
  @@map("orders")
}

model OrderItem {
  id              String @id @default(cuid())
  orderId         String
  warehouseItemId String
  requestedQty    Int
  pulledQty       Int    @default(0)

  order         Order              @relation(fields: [orderId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory @relation(fields: [warehouseItemId], references: [id])

  @@map("order_items")
}

model InventoryTransaction {
  id        String   @id @default(cuid())
  companyId String
  itemId    String
  delta     Int
  reason    String?
  source    String   @default("manual")
  createdBy String?
  createdAt DateTime @default(now())

  company Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  item    WarehouseInventory @relation(fields: [itemId], references: [id])

  @@map("inventory_transactions")
}

enum PartRequestStatus {
  PENDING
  IN_PROGRESS
  FULFILLED
  CANCELLED
}

model PartRequest {
  id          String            @id @default(cuid())
  companyId   String
  requestedBy String
  itemName    String
  description String?
  quantity    Int               @default(1)
  urgency     String            @default("normal") // low, normal, high, critical
  status      PartRequestStatus @default(PENDING)
  notes       String?
  fulfilledBy String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  fulfilledAt DateTime?

  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  requester User    @relation(fields: [requestedBy], references: [id])

  @@map("part_requests")
}
