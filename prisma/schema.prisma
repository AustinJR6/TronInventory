generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  WAREHOUSE
  FIELD
}

enum OrderStatus {
  SUBMITTED
  IN_PROGRESS
  READY
  COMPLETED
  CANCELLED
}

enum OrderType {
  WEEKLY_STOCK
  AD_HOC
  TRANSFER
}

enum LicenseStatus {
  TRIAL
  ACTIVE
  SUSPENDED
  EXPIRED
}

enum LicenseTier {
  CORE
  OPS
  OPS_SCAN
  OPS_SCAN_PO
}

enum AiConversationStatus {
  ACTIVE
  ARCHIVED
  COMPLETED
}

enum AiMessageRole {
  USER
  ASSISTANT
  SYSTEM
}

enum AiActionStatus {
  PROPOSED
  CONFIRMED
  EXECUTED
  FAILED
  CANCELLED
}

model Company {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  logoUrl      String?
  primaryColor String?
  appName      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  license               License?
  users                 User[]
  branches              Branch[]
  warehouseInventory    WarehouseInventory[]
  vehicleInventoryItems VehicleInventoryItem[]
  vehicleStocks         VehicleStock[]
  orders                Order[]
  inventoryTransactions InventoryTransaction[]
  partRequests          PartRequest[]
  bomDrafts             BomDraft[]
  aiConversations       AiConversation[]
  aiActions             AiAction[]
  auditLogs             AuditLog[]

  @@map("companies")
}

model License {
  id        String        @id @default(cuid())
  companyId String        @unique
  status    LicenseStatus @default(TRIAL)
  tier      LicenseTier   @default(CORE)
  startsAt  DateTime      @default(now())
  expiresAt DateTime?
  notes     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@map("licenses")
}

model Branch {
  id        String   @id @default(cuid())
  companyId String
  name      String
  city      String
  address   String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  company            Company              @relation(fields: [companyId], references: [id], onDelete: Cascade)
  users              User[]
  warehouseInventory WarehouseInventory[]
  vehicleStocks      VehicleStock[]
  orders             Order[]
  aiConversations    AiConversation[]

  @@unique([companyId, name])
  @@map("branches")
}

model User {
  id            String   @id @default(cuid())
  companyId     String
  email         String   @unique
  name          String
  password      String
  role          UserRole
  vehicleNumber String?
  branchId      String?
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  company       Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  branch        Branch?        @relation(fields: [branchId], references: [id])
  orders        Order[]
  vehicleStocks VehicleStock[]
  partRequests  PartRequest[]
  bomDrafts     BomDraft[]
  aiConversations AiConversation[]
  aiActions        AiAction[]
  auditLogs        AuditLog[]

  @@unique([companyId, vehicleNumber])
  @@map("users")
}

model WarehouseInventory {
  id          String   @id @default(cuid())
  companyId   String
  itemName    String
  category    String
  parLevel    Int
  currentQty  Int
  unit        String
  branchId    String?
  sku         String?
  qrCodeData  String?  @db.Text
  lastUpdated DateTime @default(now())
  updatedAt   DateTime @updatedAt

  company               Company                @relation(fields: [companyId], references: [id], onDelete: Cascade)
  branch                Branch?                @relation(fields: [branchId], references: [id])
  orderItems            OrderItem[]
  inventoryTransactions InventoryTransaction[]
  bomItems              BomItem[]

  @@unique([companyId, itemName, branchId])
  @@unique([companyId, sku, branchId])
  @@map("warehouse_inventory")
}

model VehicleInventoryItem {
  id        String @id @default(cuid())
  companyId String
  itemName  String
  category  String
  parLevel  Int
  unit      String

  company           Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  vehicleStockItems VehicleStockItem[]

  @@unique([companyId, itemName])
  @@map("vehicle_inventory_items")
}

model VehicleStock {
  id            String   @id @default(cuid())
  companyId     String
  userId        String
  vehicleNumber String
  branchId      String?
  weekEnding    DateTime
  submittedAt   DateTime @default(now())

  company        Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user           User               @relation(fields: [userId], references: [id])
  branch         Branch?            @relation(fields: [branchId], references: [id])
  items          VehicleStockItem[]
  generatedOrder Order?

  @@map("vehicle_stocks")
}

model VehicleStockItem {
  id             String @id @default(cuid())
  vehicleStockId String
  itemId         String
  expectedQty    Int
  actualQty      Int
  difference     Int

  vehicleStock VehicleStock         @relation(fields: [vehicleStockId], references: [id], onDelete: Cascade)
  item         VehicleInventoryItem @relation(fields: [itemId], references: [id])

  @@map("vehicle_stock_items")
}

model Order {
  id             String      @id @default(cuid())
  companyId      String
  orderNumber    String
  userId         String
  vehicleNumber  String
  branchId       String?
  orderType      OrderType
  status         OrderStatus @default(SUBMITTED)
  notes          String?
  vehicleStockId String?     @unique
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  completedAt    DateTime?

  company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user         User          @relation(fields: [userId], references: [id])
  branch       Branch?       @relation(fields: [branchId], references: [id])
  vehicleStock VehicleStock? @relation(fields: [vehicleStockId], references: [id])
  items        OrderItem[]
  bomDraft     BomDraft?

  @@unique([companyId, orderNumber])
  @@map("orders")
}

model OrderItem {
  id              String @id @default(cuid())
  orderId         String
  warehouseItemId String
  requestedQty    Int
  pulledQty       Int    @default(0)

  order         Order              @relation(fields: [orderId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory @relation(fields: [warehouseItemId], references: [id])

  @@map("order_items")
}

model InventoryTransaction {
  id        String   @id @default(cuid())
  companyId String
  itemId    String
  delta     Int
  reason    String?
  source    String   @default("manual")
  createdBy String?
  createdAt DateTime @default(now())

  company Company            @relation(fields: [companyId], references: [id], onDelete: Cascade)
  item    WarehouseInventory @relation(fields: [itemId], references: [id])

  @@map("inventory_transactions")
}

enum PartRequestStatus {
  PENDING
  IN_PROGRESS
  FULFILLED
  CANCELLED
}

enum BomStatus {
  DRAFT
  PROCESSING
  PROCESSED
  SUBMITTED
  FAILED
}

enum MatchConfidence {
  HIGH
  MEDIUM
  LOW
  MANUAL
}

model PartRequest {
  id          String            @id @default(cuid())
  companyId   String
  requestedBy String
  itemName    String
  description String?
  quantity    Int               @default(1)
  urgency     String            @default("normal") // low, normal, high, critical
  status      PartRequestStatus @default(PENDING)
  notes       String?
  fulfilledBy String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  fulfilledAt DateTime?

  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  requester User    @relation(fields: [requestedBy], references: [id])

  @@map("part_requests")
}

model BomDraft {
  id                String    @id @default(cuid())
  companyId         String
  userId            String
  name              String
  description       String?
  pdfFileName       String
  pdfFilePath       String
  pdfFileSize       Int
  status            BomStatus @default(DRAFT)
  aiProcessingError String?   @db.Text
  orderId           String?   @unique
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  submittedAt       DateTime?

  company Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User     @relation(fields: [userId], references: [id])
  order   Order?   @relation(fields: [orderId], references: [id])
  items   BomItem[]

  @@map("bom_drafts")
}

model BomItem {
  id                  String          @id @default(cuid())
  bomDraftId          String
  extractedItemName   String
  extractedQuantity   Int
  extractedUnit       String?
  extractedCategory   String?
  extractedWireSize   String?         // Wire size (e.g., "10 AWG", "12 AWG")
  extractedConduitSize String?        // Conduit size (e.g., "1/2\"", "3/4\"")
  warehouseItemId     String?
  matchConfidence     MatchConfidence @default(LOW)
  aiMatchReason       String?         @db.Text
  manuallyOverridden  Boolean         @default(false)
  notes               String?         @db.Text
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  bomDraft      BomDraft            @relation(fields: [bomDraftId], references: [id], onDelete: Cascade)
  warehouseItem WarehouseInventory? @relation(fields: [warehouseItemId], references: [id])

  @@map("bom_items")
}

model AiConversation {
  id            String               @id @default(cuid())
  companyId     String
  userId        String
  branchId      String?
  topic         String
  status        AiConversationStatus @default(ACTIVE)
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  lastMessageAt DateTime             @default(now())
  archivedAt    DateTime?

  company  Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id])
  branch   Branch?  @relation(fields: [branchId], references: [id])
  messages AiMessage[]
  actions  AiAction[]

  @@index([companyId, userId])
  @@index([status, lastMessageAt])
  @@map("ai_conversations")
}

model AiMessage {
  id               String        @id @default(cuid())
  conversationId   String
  role             AiMessageRole
  content          String        @db.Text
  toolCalls        String?       @db.Text
  audioTranscript  Boolean       @default(false)
  tokenCount       Int?
  processingTimeMs Int?
  createdAt        DateTime      @default(now())

  conversation AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@map("ai_messages")
}

model AiAction {
  id             String         @id @default(cuid())
  conversationId String
  companyId      String
  userId         String
  actionType     String
  status         AiActionStatus @default(PROPOSED)
  proposedData   String         @db.Text
  executedData   String?        @db.Text
  errorMessage   String?        @db.Text
  idempotencyKey String         @unique
  entityType     String?
  entityId       String?
  createdAt      DateTime       @default(now())
  confirmedAt    DateTime?
  executedAt     DateTime?

  conversation AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  company      Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user         User           @relation(fields: [userId], references: [id])

  @@index([companyId, userId])
  @@index([status, createdAt])
  @@index([idempotencyKey])
  @@map("ai_actions")
}

model AuditLog {
  id         String   @id @default(cuid())
  companyId  String
  userId     String?
  entityType String
  entityId   String
  action     String
  changes    String   @db.Text
  reason     String?
  source     String   @default("ui")
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id])

  @@index([companyId, entityType, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}
